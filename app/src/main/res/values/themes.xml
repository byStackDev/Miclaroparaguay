<resources>
    <!-- Base application theme. -->
    <style name="Theme.MiClaroParaguay" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/purple_700</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MiClaroParaguay.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="CustomProgressBarStyle" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:background">@drawable/custom_progressbar_background</item>
    </style>


    <style name="Theme.MiClaroParaguay.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MiClaroParaguay.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>